@model Ogani.Data.Entities.Category

@{
    ViewData["Title"] = "Details";
}

<h4 class="text-center py-4">Category Name :</h4>
    <hr class="px-6">

    <dl class="py-2">
        <div class="row  py-2">
            <dt class="col-4 text-end">@Html.DisplayNameFor(model => model.CategoryName) : </dt>
