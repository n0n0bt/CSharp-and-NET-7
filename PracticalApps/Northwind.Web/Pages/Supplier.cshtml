@page
@using Packt.Shared;
@model Northwind.Web.Pages.SupplierModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div class="row">
    <h1 class="display-2">Supplier</h1>
    <table class="table">
        <thead class="thead-inverse">
            <tr>
                <th>Company Name</th>
                <th>Country</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Supplier is not null)
            {
                @foreach (Supplier supplier in Model.Supplier)
                {
                    <tr>
                        <td>@supplier.SupplierName</td>
                        <td>@supplier.Country</td>
                        <td>@supplier.Phone</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="row">
    <p>Enter details for a new supplier:</p>
    <form method="POST">
        <div>
            <input asp-for="Suppliers.SupplierName" placeholder="Supplier Name" />
        </div>
        <div>
            <input asp-for="Suppliers.Country" placeholder="Country" />
        </div>
        <div>
            <input asp-for="Suppliers.Phone" placeholder="Phone" />
        </div>
        <input type="submit" />
    </form>
</div>